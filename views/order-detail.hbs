<section>
  <h2>Order #{{order.id}}</h2>
  <p><strong>Customer:</strong> {{order.customer}}</p>
  <p><strong>Status:</strong> {{order.status}}</p>
  <p><strong>Total:</strong> ${{order.total}}</p>

  <h3>Items</h3>
  <ul>
    {{#each order.items}}
      <li>{{qty}} x {{name}} ({{sku}}) @ ${{price}}</li>
    {{/each}}
  </ul>

  <button class="sync-btn" data-order-id="{{order.id}}">
    Sync to ERP
  </button>
</section>
